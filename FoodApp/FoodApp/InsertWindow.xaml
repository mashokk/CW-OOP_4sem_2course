<Window x:Class="FoodApp.InsertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodApp"
        mc:Ignorable="d"
        Title="InsertWindow" Height="180" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="25,25,0,0" TextWrapping="Wrap" Text="Выберите ингридиент:" VerticalAlignment="Top"/>
        <ComboBox SelectedItem="{Binding ID_Ingredient}" x:Name="comboBox" HorizontalAlignment="Left" Margin="25,61,0,0" VerticalAlignment="Top" Width="244"/>
        <Button x:Name="insertBtn" Content="Добавить" HorizontalAlignment="Left" Margin="25,98,0,0" VerticalAlignment="Top" Width="98" Height="27" Click="insertBtn_Click"/>

    </Grid>
</Window>
